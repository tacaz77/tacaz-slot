async function processResult(res) {
    document.getElementById('spinBtn').disabled = false;
    
    // –ü—Ä–æ–≤–µ—Ä–∫–∞: –≤—Å–µ —Ç—Ä–∏ —Å–∏–º–≤–æ–ª–∞ –≤ —Ä—è–¥
    if(res[0] === res[1] && res[1] === res[2]) {
        const config = SYMBOLS.find(s => s.s === res[0]);
        const multiplier = config.v;
        const winAmt = 100 * multiplier;
        
        let tier = "";
        let color = "";

        // –õ–æ–≥–∏–∫–∞ —É—Ä–æ–≤–Ω–µ–π –ø–æ –≤–æ–∑—Ä–∞—Å—Ç–∞–Ω–∏—é
        if (multiplier <= 5) {
            tier = "NORMAL WIN";
            color = "text-blue-400";
        } else if (multiplier <= 25) {
            tier = "SUPERB WIN";
            color = "text-purple-500";
        } else if (multiplier <= 50) {
            tier = "SENSATIONAL WIN";
            color = "text-pink-500";
        } else {
            tier = "üî• BIG WIN üî•";
            color = "text-yellow-500 animate-bounce";
        }

        // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ç–∏—Ç—Ä –≤—ã–∏–≥—Ä—ã—à–∞
        const winDisplay = document.getElementById('lastWin');
        winDisplay.innerHTML = `<span class="${color}">${tier}<br>+$${winAmt}</span>`;
        document.getElementById('winLine').classList.add('active-win');

        // –û—Ç–ø—Ä–∞–≤–∫–∞ –¥–∞–Ω–Ω—ã—Ö –Ω–∞ —Å–µ—Ä–≤–µ—Ä
        const s_res = await fetch('/win', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({amount: winAmt})
        });
        const s_data = await s_res.json();
        balance = s_data.new_balance;
        document.getElementById('balance').innerText = `$${balance}`;
    }
}
